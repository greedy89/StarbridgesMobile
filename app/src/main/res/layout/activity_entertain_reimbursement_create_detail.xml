<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.EntertainReimbursementCreateDetailActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:padding="8dp"
        android:text="Add Detail"
        android:textColor="@color/fontBlackEnable"
        android:textSize="20sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                style="@style/LabelBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date" />

            <LinearLayout
                style="@style/GrayBorder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    style="@style/EditTextStyle"
                    android:id="@+id/txtDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:enabled="false"/>

                <ImageView
                    android:id="@+id/imgDatePicker"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_action_calendar" />

            </LinearLayout>


            <TextView
                style="@style/LabelBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_margin"
                android:text="Entertain Place" />

            <EditText
                style="@style/GrayBorder"
                android:id="@+id/txtEntertainPlace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                style="@style/LabelBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_margin"
                android:text="Project" />

            <EditText
                style="@style/GrayBorder"
                android:id="@+id/txtProject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                style="@style/LabelBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_margin"
                android:text="Recipient Position" />

            <EditText
                style="@style/GrayBorder"
                android:id="@+id/txtRecipientPosition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                style="@style/LabelBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_margin"
                android:text="Participant" />

            <EditText
                style="@style/GrayBorder"
                android:id="@+id/txtParticipant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                style="@style/LabelBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_margin"
                android:text="Recipient Company Name" />

            <EditText
                style="@style/GrayBorder"
                android:id="@+id/txtRecipientCompanyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                style="@style/LabelBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_margin"
                android:text="Recipient Business Type" />

            <EditText
                style="@style/GrayBorder"
                android:id="@+id/txtRecipientBusinessType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                style="@style/LabelBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_margin"
                android:text="Amount" />

            <EditText
                style="@style/GrayBorder"
                android:id="@+id/txtAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"/>
            <TextView
                style="@style/LabelBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_margin"
                android:text="Attachment File" />

            <LinearLayout
                style="@style/GrayBorder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnAttachmentUpload"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/rounded_btn"
                    android:text="Upload"
                    android:textColor="@android:color/white" />

                <LinearLayout
                    android:id="@+id/layoutAttachment"
                    style="@style/WhiteBackground"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal"

                    android:visibility="visible">

                    <TextView
                        android:id="@+id/txtAttachment"
                        style="@style/EditTextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="middle"
                        android:singleLine="true" />

                    <ImageView
                        android:id="@+id/imgDeleteAttachment"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_dialog_close_light"
                        android:visibility="gone"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/lblDownloadAttachment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Download File"
                    style="@style/LabelLink" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:layout_marginTop="@dimen/item_margin"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_btn"
                    android:text="Save"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_btn"
                    android:text="Cancel"
                    android:textColor="@android:color/white" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>